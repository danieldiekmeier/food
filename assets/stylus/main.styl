@import "base/normalize"

* {
  position relative
  margin 0
  padding 0
  box-sizing border-box
}

html {
  font-size 18px
  line-height 1.4
}

body {
  background-color #fff

  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif
}

