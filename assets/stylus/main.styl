.Header-headline {
  margin 0
  color $c-base
  font-size 1em
  font-weight normal

  a {
    color inherit
    text-decoration none
  }

  span {
    display none
  }
}

.Header-logo {
  display block
  max-width 100%
}

.Content {
  width 100%
  max-width 900px

  margin-top 3rem
  margin-left auto
  margin-right auto
  margin-bottom 3rem

  padding-left 1rem
  padding-right 1rem

  color #292929
}

.RecipeText {
  color white

  a {
    color inherit
    border-bottom 1px dotted $c-base-light
    text-decoration none
  }

  p,
  ul {
    margin-top 1rem
    margin-bottom 1rem

    &:empty {
      display none
    }
  }

  ul {
    padding-left 2rem
    line-height 1.7
  }
}

.Recipes {
  display grid
  grid-template-columns 1fr 1fr
  grid-column-gap 1rem
  grid-row-gap 1rem

  padding-left 0

  @media (max-width: 500px) {
    grid-template-columns 1fr
  }
}

.Recipe {
  display flex
  align-items center
  justify-content center

  min-height 5rem

  border-radius 6px
  background-color $c-base-light

  color white
  font-size 1.5em
  font-weight bold
  text-decoration none
}

.Footer {
  width calc(100% - 2rem)
  max-width calc(900px - 2rem)

  margin-left auto
  margin-right auto

  padding-top 1rem
  padding-bottom 1rem

  border-top 1px solid $c-base-light
}

.Footer-link {
  display inline-block
  border-bottom 1px dotted $c-base-light
  color $c-base-light
  text-decoration none
}
