@import "base/normalize"

$c-base = #4C2737
$c-base-dark = #522332
$c-base-light = #983F65

* {
  position relative
  margin 0
  padding 0
  box-sizing border-box
}

html {
  font-size 18px
  line-height 1.4
}

body {
  background-color $c-base

  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif
}

