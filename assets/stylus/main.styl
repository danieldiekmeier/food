  padding 1rem

  background-color #CA9368
}

.Header-headline {
  margin 0
  color #fff
  font-size 1em
  font-weight normal

  a {
    color inherit
    text-decoration none
  }
}

.Content {
  width 100%
  max-width 900px

  margin-left auto
  margin-right auto

  padding 1rem
  padding-top 2rem
  padding-bottom 2rem

  color #292929
}

.RecipeText {
  p,
  ul {
    margin-top 1rem
    margin-bottom 1rem

    &:empty {
      display none
    }
  }

  ul {
    padding-left 2rem
    line-height 1.7
  }
}

.Recipes {
  display grid
  grid-template-columns 1fr 1fr
  grid-column-gap 1rem
  grid-row-gap 1rem

  padding-left 0

  @media (max-width: 500px) {
    grid-template-columns 1fr
  }
}

.Recipe {
  display flex
  align-items center
  justify-content center

  min-height 5rem

  border-radius 6px
  background-color #ddd

  color inherit
  font-size 1.5em
  font-weight bold
  text-decoration none
}

.Footer {
  width 100%
  max-width 900px

  margin-left auto
  margin-right auto

  padding 1rem

  border-top 1px solid #eee
}

.Footer-link {
  color #aaa
  text-decoration none
}
